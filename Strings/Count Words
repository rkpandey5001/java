import java.util.Scanner;
public class Solution 
{
	public static int countWords(String str) 
  {	
        if (str.length()==0)
        {
            return 0;
        }
        int count=1;
        for (int i=0; i<str.length()-1; i++)
        {
            if (str.charAt(i)==' ')
            {
                count++;
            }
        }
        return count;     
	}   
}
