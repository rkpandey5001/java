public class Solution
{    
    public static void arrange(int[] arr, int n) 
    {
        int i = 0;
        int j = n - 1;
        int num = 1;

        while(i <= j) {

          if(num % 2 == 1){
            arr[i] = num;
            num=num+ 1;
            i=i+1;
          }
            else 
          {
            arr[j] = num;
            num=num+1;
            j=j-1;
          }
        }
    }
}
